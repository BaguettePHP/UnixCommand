namespace Baguette\UnixCommand;

require_once __DIR__ . '/../functions.php';

if (realpath($_SERVER['SCRIPT_FILENAME']) == realpath(__FILE__)) {
    $argv = isset($_SERVER['argv']) ? $_SERVER['argv'] : [];
    array_shift($argv);

    exit(whoami($argv));
}
